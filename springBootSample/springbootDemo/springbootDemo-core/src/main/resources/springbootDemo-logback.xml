<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>
			%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
			</Pattern>
		</encoder>
	</appender>

	<appender name="FILE"
			  class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/ucenter.log</file>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>
				%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
			</Pattern>
		</encoder>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${LOG_PATH}/temp/ucenter.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>50MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>

	</appender>

	<!-- 文件输出_error -->
	<appender name="FileError" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/ucenter-error.log</file>
		<!-- 过滤掉ERROR级别以下的日志不输出到文件中 -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/%d{yyyy-MM-dd,aux}/ucenter-error-%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
			<maxFileSize>20MB</maxFileSize>
			<maxHistory>180</maxHistory>
			<totalSizeCap>2GB</totalSizeCap>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>
				%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} [%L][%C]- %msg%n
			</Pattern>
		</encoder>
	</appender>

	<logger name="org.springframework" level="${log.level}"
                additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FileError" />
	</logger>

	<logger name="org.mybatis" level="debug"
			additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FileError" />
	</logger>
	
	<logger name="com.aaron.springbootDemo" level="${log.level}"
                additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FileError" />
	</logger>


	<root level="${log.level}">
		<appender-ref ref="STDOUT" />
		<!--<appender-ref ref="FILE" />-->
	</root>

	<root level="${log.level}">
		<appender-ref ref="FileError" />
	</root>

</configuration>